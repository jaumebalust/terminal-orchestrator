{
  "name": "orchestrator-terminal",
  "version": "1.0.5",
  "description": "Terminal Orchestrator - Multi-project terminal workspace",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "@electron/rebuild",
    "dist": "electron-builder --mac",
    "dist:arm": "electron-builder --mac --arm64",
    "dist:intel": "electron-builder --mac --x64",
    "dist:universal": "electron-builder --mac --universal",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.jimmy.terminal-orchestrator",
    "productName": "Terminal Orchestrator",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "darkModeSupport": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "title": "Terminal Orchestrator",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.{md,map,ts}",
      "!node_modules/**/test/**",
      "!node_modules/**/docs/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "jaumebalust",
      "repo": "terminal-orchestrator"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaumebalust/terminal-orchestrator.git"
  },
  "author": {
    "name": "jaumebalust",
    "email": "jaumebalust@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0"
  }
}
